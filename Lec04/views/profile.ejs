<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="w-full flex justify-end">
        <a
          class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block"
          href="/logout"
          >Logout</a
        >
      </div>
      <h1 class="text-3xl mb-5">Hello , Welcome! <%= user.name %></h1>
      <h5 class="mb-5">You can create a new post.</h5>
      <form action="/post" method="post">
        <textarea
          placeholder="whats on your mind"
          name="content"
          class="p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"
        ></textarea>
        <input
          class="px-2 py-2 bg-blue-500 block rounded-md mt-2 w-40"
          type="submit"
          value="Create Post"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-zinc-400">Your Posts</h3>
        <div class="postcontainer mt-5">
          <% user.posts.reverse().forEach(function (post){%>
          <div
            class="post mb-2 w-1/3 p-4 rounded-md border-2 border-zinc-700 bg-zinc-800"
          >
            <h3 class="text-blue-500 mb-2"><%= user.email %></h3>
            <p class="text-sm tracking-tighter"><%= post.content %></p>
            <div class="btns flex mt-5 gap-5">
              <small class="mt-2 inline-block"> <%= post.likes.length %></small>
              <a class="text-blue-500" href="/like/<%= post._id %> "
                ><%= post.likes.indexOf(user._id) === -1? "like":"unlike" %></a
              ><a class="text-zinc-400" href="/edit/<%= post._id %>"
                >Edit Post</a
              >
            </div>
          </div>
          <%}) %>
        </div>
      </div>
    </div>
  </body>
</html>
